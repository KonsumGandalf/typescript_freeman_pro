{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["temp.*", "**/vendor/*.js", "*.d.ts"],
    "rules": {
        "linebreak-style": 0,
        "quotes": 0,
        "no-console": 0,
        "no-redeclare": 0,
        "lines-between-class-members": 0,
        "max-classes-per-file": 0
    }
}
